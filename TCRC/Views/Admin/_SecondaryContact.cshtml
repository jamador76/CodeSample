@model TCRC.Models.Member.RegisterViewModel

<fieldset>
    <legend>Secondary Contact Information</legend>
    <div class="pure-g">
        @Html.HiddenFor(m => m.BusinessContacts[0].BusinessContactId)
        <div class="pure-u-1-3">
            @Html.LabelFor(m => m.BusinessContacts[0].SecondaryFirstName)
            @Html.TextBoxFor(m => m.BusinessContacts[0].SecondaryFirstName, new { maxlength = "50" })
        </div>
        <div class="pure-u-1-3">
            @Html.LabelFor(m => m.BusinessContacts[0].SecondaryMiddleName)
            @Html.TextBoxFor(m => m.BusinessContacts[0].SecondaryMiddleName, new { maxlength = "50" })
        </div>
        <div class="pure-u-1-3">
            @Html.LabelFor(m => m.BusinessContacts[0].SecondaryLastName)
            @Html.TextBoxFor(m => m.BusinessContacts[0].SecondaryLastName, new { maxlength = "50" })
        </div>
        <div class="pure-u-1-3">
            @Html.LabelFor(m => m.BusinessContacts[0].SecondaryTitle)
            @Html.TextBoxFor(m => m.BusinessContacts[0].SecondaryTitle, new { maxlength = "50" })
        </div>
        <div class="pure-u-2-3">
            @Html.LabelFor(m => m.BusinessContacts[0].SecondaryEmailAddress)
            @Html.TextBoxFor(m => m.BusinessContacts[0].SecondaryEmailAddress, new { @class = "pure-input-1-2", maxlength = "255" })
        </div>
        <div class="pure-u-1-3">
            @Html.LabelFor(m => m.BusinessContacts[0].SecondaryPhoneNumber)
            @Html.TextBoxFor(m => m.BusinessContacts[0].SecondaryPhoneNumber, new { mask = "(999) 999-9999" })
        </div>
        <div class="pure-u-2-3">
            @Html.LabelFor(m => m.BusinessContacts[0].SecondaryFaxNumber)
            @Html.TextBoxFor(m => m.BusinessContacts[0].SecondaryFaxNumber, new { mask = "(999) 999-9999" })
        </div>
    </div>
</fieldset>
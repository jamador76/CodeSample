@model TCRC.Models.Admin.UserProfileViewModel

<h2>Edit User</h2>

@using (Html.BeginForm("UserProfile", "Admin", FormMethod.Post, new { @class = "pure-form pure-form-stacked" }))
{
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>User</legend>
        <div class="pure-g">
            <div class="pure-u-1">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
            </div>
            <div class="pure-u-1">
                @Html.LabelFor(m => m.FirstName)
                @Html.TextBoxFor(m => m.FirstName)
            </div>
            <div class="pure-u-1">
                @Html.LabelFor(m => m.LastName)
                @Html.TextBoxFor(m => m.LastName)
            </div>
            <div class="pure-u-1">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email)
            </div>
        </div>
    </fieldset>
}
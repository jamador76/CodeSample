@model TCRC.Models.Member.RegisterViewModel

<fieldset>
    <legend>Fees</legend>
    <p>
        The amount of your initial assessment is $275.00 per business location that services customers.
    </p>
    <p>
        Late fees: The Seller of Travel Law requires that a late fee be assessed at the rate of $5.00 per day for 
        each day after the filing deadline, up to a maximum fee of $500. The filing deadline is ten days before
        your business Start Date; a late fee of $5 per day, up to a maximum of $500, must be paid for every day 
        past the deadline, up to the date this application is submitted.
    </p>
    <div class="pure-g">
        <div class="pure-u-1-3">
            @Html.LabelFor(m => m.SubtotalAmount)
            @Html.TextBoxFor(m => m.SubtotalAmount, new { @class = "money", @readonly = "readonly", Value = "275" })
        </div>
        <div class="pure-u-1-3">
            @Html.LabelFor(m => m.LateFeeAmount)
            @Html.TextBoxFor(m => m.LateFeeAmount, new { @class = "money", @readonly = "readonly" })
        </div>
        <div class="pure-u-1-3">
            @Html.LabelFor(m => m.TotalAmount)
            @Html.TextBoxFor(m => m.TotalAmount, new { @class = "money", @readonly = "readonly" })
        </div>
    </div>
</fieldset>